---
import { Icon } from 'astro-icon/components'

const { icon, title, description } = Astro.props
---

<div
  class='flex flex-col gap-4 border rounded-tr-2xl rounded-bl-2xl p-5 bg-primary shadow-xl'
>
  <div class='flex gap-4 items-center'>
    <h3 class='text-xl text-accent'>{title}</h3>
    <Icon name={icon} class='size-9 text-white' />
  </div>
  <p class='text-sm xl:text-base text-white'>{description}</p>
</div>
