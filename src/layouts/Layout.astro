---
import '@/styles/global.css'
import AppHeader from '@/components/AppHeader.astro'

export interface Props {
  title: string
  description: string
  cannonical?: string
  keywords: string
}

const { title, description, cannonical, keywords } = Astro.props as Props
---

<!doctype html>
<html lang='pl'>
  <head>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Aboreto&display=swap');
    </style>
    <script
      src='https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js'
      defer></script>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />

    <meta name='robots' content='index, follow' />
    <meta name='generator' content={Astro.generator} />
    <link rel='canonical' href={cannonical} />
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta name='keywords' content={keywords} />
    <meta property='og:type' content='website' />

    <meta
      property='og:title'
      content={'Adwokat Radosław Dzyr | Kancelaria Adwokacka Biała Podlaska'}
    />
    <meta
      property='og:description'
      content={'Kancelaria Adwokacka - Adwokat Radosław Rdzyr Biała Podlaska. Usługi prawne dla firm i osób fizycznych.'}
    />
    <meta property='og:url' content={'https://klimatbp.pl'} />
    <meta property='og:image' content={'https://klimatbp.pl/og-image.png'} />
    <meta property='og:locale' content={'pl'} />

    <meta name='DC.identifier' content='https://klimatbp.pl' />
    <meta name='DC.creator' content='Kacper Saweczko' />
    <meta name='DC.language' content='pl' />
    <meta name='DC.type' content='website' />
    <meta name='DC.format' content='text/html' />
    <meta name='DC.rights' content='Kancelaria Adwokacka Radosław Dzyr' />
    <meta
      name='DC.subject'
      content={'Kancelaria Adwokacka - Adwokat Radosław Rdzyr Biała Podlaska. Usługi prawne dla firm i osób fizycznych.'}
    />
    <script is:inline type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Kancelaria Adwokacka Radosław Dzyr",
        "image": "https://klimatbp.pl/logo.ico",
        "@id": "https://klimatbp.pl",
        "url": "https://klimatbp.pl",
        "telephone": "+48 503 172 772",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "ul. Brzeska 6",
          "addressLocality": "Biała Podlaska",
          "postalCode": "21-500",
          "addressCountry": "PL"
        },

        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        "founder": {
          "@type": "Person",
          "name": "Radosław dzyr"
        },
        "identifier": [
          {
            "@type": "PropertyValue",
            "propertyID": "NIP",
            "value": "5371701283"
          }
        ],
        "description": "Kancelaria Adwokacka - Adwokat Radosław Rdzyr Biała Podlaska. Usługi prawne dla firm i osób fizycznych.",
        "email": "adwokat.dzyr@wp.pl"
      }
    </script>
  </head>
  <body>
    <AppHeader />
    <main>
      <slot />
    </main>
    <!-- <AppFooter /> -->
  </body>
</html>
